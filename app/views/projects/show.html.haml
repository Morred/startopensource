- project ||= @project
.stripe
  %h2= project.name
.project
  .project-languages
    = render project.languages, view: :badge
  .description
    %p= project.description
    %button.btn.btn-default.github
      = image_tag("octocat.png", size: "22x22")
      %span= "View on GitHub"
  .issue-list
    = render @issues, view: :index_project