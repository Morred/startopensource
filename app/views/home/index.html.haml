#home
  .center.hero-unit
    %h1= "Open Source for Everyone"
    %p= "This is a collection of beginner friendly open source projects to make it easier for you to start contributing."

    #search
      = form_tag("/search", method: "get", class: 'form-inline') do
        -#= label_tag(:language, "Pick a language:")
        = text_field_tag(:language, nil, placeholder: 'Pick a language', class: 'form-control')
        = submit_tag('Go!', class: 'btn btn-default')

  .info
    %p= "Want to learn more?"
    %button.btn.btn-default
      %span= "Read our FAQ"

  %h3= "Popular Languages"
  #languages-buttons
    %ul
      %li= "Ruby"
      %li= "JavaScript"
      %li= "Python"
      %li= "C"
      %li= "Java"

  %h3= "Popular Projects"
  #popular-projects
    - @projects.each do |project|
      .project 
        %h4= project.name
        %p= project.description
        %span= project.language